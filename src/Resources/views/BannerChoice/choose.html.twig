{% extends '@ForciBanner/BannerChoice/base.html.twig' %}

{% block content %}

    {% form_theme filterForm '@ForciBanner/_shared/form/filter_theme.html.twig' %}
    {{ form(filterForm) }}

    <hr>
    {% if forms is not empty %}
        {% for positionId, form in forms %}
            {% form_theme form '@ForciBanner/_shared/form/form_theme.html.twig' %}
            <div class="row">
                {{ form_start(form) }}
                <div class="col-lg-2 col-md-2 col-sm-3 col-xs-12">
                    {{ form_label(form.banner, form.vars.data.description, {id: 'form'~positionId}) }}
                </div>
                <div class="col-lg-10 col-md-10 col-sm-9 col-xs-12">
                    <div class="form-group">
                        {{ form_widget(form.banner, {id: 'form'~positionId}) }}
                    </div>
                </div>
                {{ form_end(form, {'render_rest': false}) }}
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <p>
                        <em>{{ form.vars.value.description }}</em>
                    </p>
                </div>
            </div>
            <hr>
        {% endfor %}
    {% else %}
        <div class="alert alert-info">
            No positions found
        </div>
    {% endif %}

    <div class="row">
        {% include '@ForciBanner/_shared/pagination.html.twig' %}
    </div>

{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
{% endblock %}
        
{% block scripts %}

    var form = $('#banner_position_choice');
        $('input, select', form).change(function(event) {
        form.submit();
    });

    var forms = $('.position-form');

    $('select', forms).change(function(event) {
        var form = $(event.target).parents('form');
        var data = form.serialize();
        var url = form.attr('action');
        $.ajax({
            url: url,
            type: 'POST',
            data: data,
            dataType: 'json'
        }).done(function(data) {
            $.witter(data.message);
        });
    });

{% endblock %}