<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <imports>
        <import resource="services/forms.xml"/>
        <import resource="services/managers.xml"/>
        <import resource="services/repositories.xml"/>
        <import resource="services/twig.xml"/>
    </imports>

    <parameters>
        <parameter key="forci_banner.show_positions_parameter">showpositions</parameter>
    </parameters>

    <services>
        <defaults autowire="true" autoconfigure="true" public="true"/>

        <prototype namespace="Forci\Bundle\BannerBundle\Controller\" resource="../../Controller">
            <tag name="controller.service_arguments" />
        </prototype>
    </services>

</container>